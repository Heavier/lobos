extends layout

block content
  .container
    .row
        .col-md-12
            .logo
        .col-md-12
            form.login(action="/game", method="post")
                .container-fluid
                    .row
                        .col-md-12
                            label Username
                                input(
                                    type="text",
                                    id="name",
                                    name="name"
                                )

                    .row
                        .col-sm-8
                            label Room code
                                input(
                                    type="number",
                                    name="room"
                                )
                        .col-sm-4
                            .bt-login-box
                                input(
                                    type="submit"
                                    name="login"
                                    value="log in"
                                )
